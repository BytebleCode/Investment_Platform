# Investment Platform Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file with real credentials!

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=change-this-to-a-secure-random-string
DEBUG=True

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///investment_platform.db

# DB2 Configuration (for mainframe deployment)
# Uncomment and configure when deploying to mainframe
# DB2_DSN=your_dsn_here
# DB2_UID=your_username
# DB2_PWD=your_password
# DB2_DATABASE=your_database
# DB2_HOSTNAME=localhost
# DB2_PORT=50000

# API Configuration
API_BASE_URL=/api

# Market Data Configuration
YAHOO_FINANCE_CACHE_HOURS=24
MARKET_DATA_BATCH_SIZE=5
RATE_LIMIT_DELAY_SECONDS=2
MARKET_DATA_HISTORY_YEARS=5

# Logging
LOG_LEVEL=INFO
